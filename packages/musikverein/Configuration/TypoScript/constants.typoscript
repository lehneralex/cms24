############
### PAGE ###
############
page {
    logo {
        file = EXT:musikverein/Resources/Public/Images/Logo MV Pabneukirchen.jpg
        fileInverted = EXT:musikverein/Resources/Public/Images/Logo MV Pabneukirchen.jpg
        height = 500
        width = 1000
        alt = Musikverein
        linktitle = Musikverein
    }
    favicon {
        file = EXT:musikverein/Resources/Public/Icons/favicon.ico
    }
    fluidtemplate {
        layoutRootPath = EXT:musikverein/Resources/Private/Layouts/Page/
        partialRootPath = EXT:musikverein/Resources/Private/Partials/Page/
        templateRootPath = EXT:musikverein/Resources/Private/Templates/Page/
    }
}


##################
### EXTENSIONS ###
##################
plugin.bootstrap_package {
    view {
        layoutRootPath = EXT:musikverein/Resources/Private/Layouts/
        partialRootPath = EXT:musikverein/Resources/Private/Partials/
        templateRootPath = EXT:musikverein/Resources/Private/Templates/
    }
}


########################
### CONTENT ELEMENTS ###
########################
plugin.bootstrap_package_contentelements {
    view {
        layoutRootPath = EXT:musikverein/Resources/Private/Layouts/ContentElements/
        partialRootPath = EXT:musikverein/Resources/Private/Partials/ContentElements/
        templateRootPath = EXT:musikverein/Resources/Private/Templates/ContentElements/
    }
